= render partial: "products/header"

- breadcrumb :identity_information
= render "layouts/breadcrumbs"

.content
  .content__left
    = render "sidebar"
  .content__information
    .content__information__title
      本人情報の登録
    .content__information__item
      .content__information__item__text
        .content__information__item__text__main
          お客さまの本人情報をご登録ください。
          %br
          登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
        .content__information__item__text__sub
          = link_to"#", class: "content__information__item__text__sub__link" do
            本人確認書類のアップロードについて
            = icon('fas', 'chevron-right', class: "content__information__item__text__sub__icon")
      .content__information__item__name_kanji
        .content__information__item__name_kanji__top
          お名前
        .content__information__item__name_kanji__bottom
          天辰 誠一郎
      .content__information__item__name_reading
        .content__information__item__name_reading__top
          お名前カナ
        .content__information__item__name_reading__bottom
          アマタツ セイイチロウ
      .content__information__item__birthday
        .content__information__item__birthday__top
          生年月日
        .content__information__item__birthday__bottom
          1975/04/18
      .content__information__item__postal_code
        .content__information__item__postal_code__top
          .content__information__item__postal_code__top__left
            郵便番号
          .content__information__item__postal_code__top__right.label
            任意
        .content__information__item__postal_code__bottom
          %input{type: "text", placeholder: "例）1234567", class:"content__information__item__postal_code__bottom__form"}
      .content__information__item__adress_1
        .content__information__item__adress_1__top
          .content__information__item__adress_1__top__left
            都道府県
          .content__information__item__adress_1__top__right.label
            任意
        .content__information__item__adress_1__bottom.abc
          = form_for '' do |f|
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--", class: "content__information__item__adress_1__bottom__input"
            = icon('fas', 'chevron-down', class: "content__information__item__adress_1__bottom__icon")
      .content__information__item__adress_2
        .content__information__item__adress_2__top
          .content__information__item__adress_2__top__left
            市区町村
          .content__information__item__adress_2__top__right.label
            任意
        .content__information__item__adress_2__bottom
          %input{type: "text", placeholder: "例）横浜市緑区", class:"content__information__item__adress_2__bottom__form"}
      .content__information__item__adress_3
        .content__information__item__adress_3__top
          .content__information__item__adress_3__top__left
            番地
          .content__information__item__adress_3__top__right.label
            任意
        .content__information__item__adress_3__bottom
          %input{type: "text", placeholder: "例）青山1−1−1", class:"content__information__item__adress_3__bottom__form"}
      .content__information__item__adress_4
        .content__information__item__adress_4__top
          .content__information__item__adress_4__top__left
            建物名
          .content__information__item__adress_4__top__right.label
            任意
        .content__information__item__adress_4__bottom
          %input{type: "text", placeholder: "例）柳ビル103", class:"content__information__item__adress_4__bottom__form"}
      = link_to"#" do
        .content__information__item__send
          登録する
      .content__information__item__text
        .content__information__item__text__sub
          = link_to"#", class: "content__information__item__text__sub__link" do
            本人情報の登録について
            = icon('fas', 'chevron-right', class: "content__information__item__text__sub__icon")

