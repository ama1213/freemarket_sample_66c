= render partial: "products/header"

- breadcrumb :edit
= render "layouts/breadcrumbs"

.content
  .content__left
    = render "sidebar"
  .content__right
    .content__right_title
      プロフィール
    .content__right_user
      .content__right_user__image
        = image_tag "/images/obake.jpg", height:"60px", width:"60px", class: "content__right__user__link__data__icon"
      .content__right_user__input
        %input{type: "text", placeholder: "例）AYA☆セール中", value: "天辰誠一郎", class: "textbox"}
    .content__right_contents
      .content__right_contents__form
        %textarea{placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪", class: "textarea_decorate"}
        %input{type: "submit", value: "変更する", id: "submit_button"}/

.banner
  = link_to"#" do
    = image_tag"/images/fre.jpg", class:"header-image"
    .banner__text
      スマホでかんたんフリマアプリ
    .banner__comment
      今すぐ無料ダウンロード!
    .banner__merucari
      = link_to "#" do
        = image_tag"/images/logo_white.svg",width:"50px",height:"50px"
    .banner__app
      = link_to"https://itunes.apple.com/jp/app/id667861049?l=ja&mt=8" do
        = image_tag("https://web-jp-assets.mercdn.net/_next/static/images/app-store-a5c17948c6fd6d5b60b13d421cd60b35.svg",width:"144px",height:"40px")
    .banner__google
      = link_to"https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja" do
        = image_tag("https://web-jp-assets.mercdn.net/_next/static/images/google-play-495575abb895b405aa6336b2a4304958.svg",width:"144px",height:"40px")

= render "layouts/footer_sell_btn"
