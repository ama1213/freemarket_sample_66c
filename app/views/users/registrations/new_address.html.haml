= form_for @user, url: addresses_path, html:{class: "signin_adress"} do |f|
  .signin_adress__top
    発送元・お届け先住所入力
  .signin_adress__contents
    .signin_adress__contents__postal_code
      .signin_adress__contents__postal_code__top
        .signin_adress__contents__postal_code__top__left
          郵便番号
        .signin_adress__contents__postal_code__top__right.label_required
          必須
      .signin_adress__contents__postal_code__item
        = f.text_field :post_number1, placeholder: "例）123-4567", class: "signin_adress__contents__postal_code__item__input"
    .signin_adress__contents__adress_1
      .signin_adress__contents__adress_1__top
        .signin_adress__contents__adress_1__top__left
          都道府県
        .signin_adress__contents__adress_1__top__right.label_required
          必須
      .signin_adress__contents__adress_1__item
        .signin_adress__contents__adress_1__item__wrap
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--", class: "signin_adress__contents__adress_1__item__wrap__input"
          = icon('fas', 'chevron-down', class: "signin_adress__contents__adress_1__item__wrap__icon")
    .signin_adress__contents__adress_2
      .signin_adress__contents__adress_2__top
        .signin_adress__contents__adress_2__top__left
          市区町村
        .signin_adress__contents__adress_2__top__right.label_required
          必須
      .signin_adress__contents__adress_2__item
        = f.text_field :municipality1, placeholder: "例）横浜市緑区", class: "signin_adress__contents__adress_2__item__input"
    .signin_adress__contents__adress_3
      .signin_adress__contents__adress_3__top
        .signin_adress__contents__adress_3__top__left
          番地
        .signin_adress__contents__adress_3__top__right.label_required
          必須
      .signin_adress__contents__adress_3__item
        = f.text_field :house_number1, placeholder: "例）青山1-1-1", class: "signin_adress__contents__adress_3__item__input"
    .signin_adress__contents__adress_4
      .signin_adress__contents__adress_4__top
        .signin_adress__contents__adress_4__top__left
          建物名
        .signin_adress__contents__adress_4__top__right.label_any
          任意
      .signin_adress__contents__adress_4__item
        = f.text_field :building_name1, placeholder: "例）柳ビル103", class: "signin_adress__contents__adress_4__item__input"
    .signin_adress__contents__phone_number
      .signin_adress__contents__phone_number__top
        .signin_adress__contents__phone_number__top__left
          電話
        .signin_adress__contents__phone_number__top__right.label_any
          任意
      .signin_adress__contents__phone_number__item
        = f.text_field :address_phone, placeholder: "例）09012345678", class: "signin_adress__contents__phone_number__item__input"
      = f.submit '次へ進む', class: "signin_adress__contents__btn"
  .signin_adress__footer
    .signin_adress__footer__nav
      .signin_adress__footer__nav__1
        = link_to "#", class: "signin_adress__footer__nav__link" do
          プライバシーポリシー
      .signin_adress__footer__nav__2
        = link_to "#", class: "signin_adress__footer__nav__link" do
          アマタツ利用規約
      .signin_adress__footer__nav__3
        = link_to "#", class: "signin_adress__footer__nav__link" do
          特定商取引に関する表記
    .signin_adress__footer__logo
      = link_to "#" do
        = image_tag "/images/logo_gray.svg", height: "65px", width: "80px", class: "signin_adress__footer__logo__icon"
    %p
      %small
        © Fmarket, Inc.
