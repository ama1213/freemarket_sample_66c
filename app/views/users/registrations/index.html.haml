.new
  %header.new__header
    .new__header__box
      = link_to "#" do
        = image_tag '/images/fmarket_logo_red.svg', class: 'new__header__box__image'
  .new__main
    %h2.new__main__title
      新規会員登録
    .new__main__form
      .new__main__form__contents
        = link_to new_user_registration_path, class: "contents__btn contents__btn__mail" do
          = icon('far', 'envelope',  class: "contents__btn__icon__mail")
          メールアドレスで登録する
        = link_to user_facebook_omniauth_authorize_path, method: :post,class: "contents__btn contents__btn__facebook" do
          = icon('fab', 'facebook-square',  class: "contents__btn__icon__facebook")
          Facebookで登録する
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post,class: "contents__btn contents__btn__google" do
          = icon('fab', 'google',  class: "contents__btn__icon__google")
          Googleで登録する
          
  .new__footer
    .new__footer__content
      .new__footer__content__top
        = link_to "プライバシーポリシー", "#", class: "new__footer__content__top__left"
        = link_to "アマタツ利用規約", "#", class: "new__footer__content__top__center"
        = link_to "特定商取引に関する表記", "#", class: "new__footer__content__top__right"
      .new__footer__content__middle
        = image_tag "/images/logo_gray.svg"
      .new__footer__content__bottom ©︎ Fmarket,inc.